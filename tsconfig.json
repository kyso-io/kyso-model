{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "rootDir": "./src",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true, 
    "emitDecoratorMetadata": true, 
  },
  "include": ["src/**/*.ts", "typings.d.ts"],
  "exclude": ["node_modules", "dist"]
}
